{
  "name": "pdfbook-editor",
  "version": "1.0.0",
  "description": "Una aplicación de escritorio Linux de código abierto para crear y editar libros con estilizado personalizado, generación de PDF profesional y sistema de plantillas.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "ts-node --project electron/tsconfig.json electron/main.ts",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc --project electron/tsconfig.json",
    "build:linux": "electron-builder --linux",
    "build:deb": "electron-builder --linux deb",
    "build:appimage": "electron-builder --linux AppImage",
    "dist": "npm run build && npm run build:linux",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ electron/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ electron/ --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"electron/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\" \"electron/**/*.{ts,js}\"",
    "verify": "node scripts/progress-verification-agent.js",
    "verify:help": "node scripts/progress-verification-agent.js --help",
    "start": "electron ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pdfbook-editor/pdfbook-editor.git"
  },
  "keywords": [
    "pdf",
    "book",
    "editor",
    "electron",
    "linux",
    "desktop",
    "publishing",
    "ebook",
    "wysiwyg"
  ],
  "author": "PDF Book Editor Team",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/pdfbook-editor/pdfbook-editor/issues"
  },
  "homepage": "https://github.com/pdfbook-editor/pdfbook-editor#readme",
  "dependencies": {
    "electron": "^28.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "better-sqlite3": "^9.0.0",
    "sharp": "^0.33.0",
    "puppeteer": "^21.0.0",
    "html2canvas": "^1.4.1",
    "fabric": "^5.3.0",
    "konva": "^9.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "monaco-editor": "^0.45.0",
    "@monaco-editor/react": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/better-sqlite3": "^7.6.0",
    "typescript": "^5.3.0",
    "electron-builder": "^24.0.0",
    "electron-dev-app-paths": "^1.1.0",
    "electron-is-dev": "^2.0.0",
    "ts-node": "^10.9.0",
    "concurrently": "^8.2.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.5.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "@headlessui/react": "^1.7.0",
    "lucide-react": "^0.300.0"
  },
  "build": {
    "appId": "com.pdfbookeditor.app",
    "productName": "PDF Book Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "category": "Office",
      "desktop": {
        "Name": "PDF Book Editor",
        "Comment": "Create and edit books with professional PDF output",
        "Keywords": "pdf;book;editor;publishing;"
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.{ts,tsx,js,jsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "electron/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!src/**/index.{ts,tsx,js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
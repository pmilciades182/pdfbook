{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "../dist/electron",
    "rootDir": "../",
    "lib": ["ES2020"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@main/*": ["src/main/*"]
    }
  },
  "include": [
    "./**/*",
    "../src/main/**/*",
    "../src/shared/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../src/renderer",
    "../tests"
  ]
}